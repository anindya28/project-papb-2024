<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".RekamMedisFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="Rekam Ibu"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Catat berat badan dan tekanan darah ibu secara rutin dan monitor perubahannya"
            android:textColor="#9AA4B2"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Judul" />

        <LinearLayout
            android:id="@+id/saturasioksigen"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/orange"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/tekanandarah"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notes">

            <TextView
                android:id="@+id/hasilSaturasi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/SpO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="SpO2"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/saturasiOksigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Saturasi Oksigen"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tekanandarah"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/magenta"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/saturasioksigen"
            app:layout_constraintTop_toBottomOf="@+id/notes">

            <TextView
                android:id="@+id/hasilTensi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/mmhg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="mmHg"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Tekanan Darah"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detakjantung"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pink"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/suhu"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saturasioksigen">

            <TextView
                android:id="@+id/hasilDetakJantung"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bpm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="bpm"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/detak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Detak Jantung"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/suhu"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/purple"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/detakjantung"
            app:layout_constraintTop_toBottomOf="@+id/tekanandarah">

            <TextView
                android:id="@+id/hasilSuhu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/cel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Celcius"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/suhubadan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:text="Suhu Badan"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="Hasil Diagnosa : "
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detakjantung" />

        <TextView
            android:id="@+id/hasilDiagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hasil" />

        <Button
            android:id="@+id/tambahdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#8EC4B4"
            android:fontFamily="@font/nunito_sans"
            android:text="Masukkan Data Baru"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@id/btUpdate"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hasilDiagnosa" />

        <Button
            android:id="@+id/btUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#8EC4B4"
            android:fontFamily="@font/nunito_sans"
            android:text="Update Data"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tambahdata"
            app:layout_constraintTop_toBottomOf="@+id/hasilDiagnosa">

        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>