<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/beratBadan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Berat Badan" />

    <EditText
        android:id="@+id/tekananDarah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tekanan Darah" />

    <EditText
        android:id="@+id/detakJantung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Detak Jantung" />

    <Button
        android:id="@+id/kirimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Data" />

</LinearLayout>
