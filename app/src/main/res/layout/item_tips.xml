<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#C98FA4"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivElemen3"
                android:layout_width="140dp"
                android:layout_height="123dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/atas" />

            <ImageView
                android:id="@+id/ivElemen2"
                android:layout_width="74dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                app:srcCompat="@drawable/tengah" />

            <ImageView
                android:id="@+id/ivElemen1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="bottom|start"
                app:srcCompat="@drawable/bawah" />

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Minggu Pertama"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Hari 1 - 7"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivGambar"
                android:layout_width="141dp"
                android:layout_height="111dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/hah"
                app:shapeAppearanceOverlay = "@style/CircularImageView"/>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>